<style>
  .center-fields-sign{
    padding-left: 20%;
    padding-right: 20%;
  }

  label {
    margin-bottom: 0;
    margin-top: 25px;
  }

</style>

<h2>Edit <%= resource_name.to_s.humanize %></h2>
<div class="center-fields-sign">
<%= form_for(resource, as: resource_name, url: edit_user_registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>

    <div class="field">
      <%= f.label :first_name %>
      <%= f.text_field :first_name, autofocus: true, placeholder: "First name", input_html: { class: "form-control", required: true } %>
    </div>

    <div class="field">
      <%= f.label :last_name %>
      <%= f.text_field :last_name, autofocus: true, placeholder: "Last name", input_html: { class: "form-control", required: true } %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true %>
    </div>

    <div class="field">
      <%= f.label "About Yourself" %>
      <%= f.cktext_area :about %>

    </div>

    <div class="field">
      <%= f.label :AvatarUpload %><br>
      <%= f.simple_fields_for :avatar do |pic| %>
          <%= pic.file_field :avatar %>
      <% end %>
    </div>

  <div class="field">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "off" %>
  </div>

  <div class="field">
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "off" %>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>
</div>
<h3>Cancel my account</h3>

<p>Unhappy? <%= button_to "Cancel my account", user_registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Back", :back %>
